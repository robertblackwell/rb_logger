{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs":[
        {
            "id":"selectSpeed",
            "type":"pickString",
            "description": "Select speed bench to run",
            "options": [
                "dedicated_thread_speed",
                "user_thread_speed"
            ],
            "default": "test_client_request"
        },
        {
            "id":"selectExperiment",
            "type":"pickString",
            "description": "Select experiment to run",
            "options": [
                "dedicated_thread_speed",
                "user_thread_speed"
            ],
            "default": "test_client_request"
        },
        {
            "id":"selectTest",
            "type":"pickString",
            "description": "Select the test to debug",
            "options": [
                "test_trog"
            ],
            "default": "test_client_request"
        }
    ],
    "configurations": [
        {
            "name": "(gdb) Sample application",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/sample-app/sample",
            "args": ["4", "5"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/cmake-build-debug/sample-app",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "(gdb) Speed",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/performance/${input:selectSpeed}",
            "args": ["4", "5"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/cmake-build-debug/performance",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "(gdb) Experiments",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/experiments/{input:selectExperiment}/{input:selectExperiment}",
            "args": ["4", "5"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/cmake-build-debug/experiments/{input:selectExperiment}/{input:selectExperiment}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "(gdb) Test Debug Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cmake-build-debug/tests/${input:selectTest}/${input:selectTest}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/cmake-build-debug/tests/${input:selectTest}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}